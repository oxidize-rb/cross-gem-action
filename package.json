{
  "name": "@oxidize-rb/cross-gem-action",
  "version": "0.0.0",
  "private": true,
  "description": "Cross compiles a native Ruby gem written in Rust",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.{ts,md,yml}'",
    "format-check": "prettier --check '**/*.{ts,md,yml}'",
    "lint": "eslint --fix src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oxidize-rs/cross-gem-action.git"
  },
  "keywords": [
    "actions",
    "rust",
    "ruby"
  ],
  "author": "Ian Ker-Seymer",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^1.1.0",
    "@actions/core": "^1.9.0",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.3.0",
    "@actions/http-client": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.29",
    "@typescript-eslint/parser": "^5.27.0",
    "@vercel/ncc": "^0.33.4",
    "eslint": "^8.25.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.7.2"
  }
}
